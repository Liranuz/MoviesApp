<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Material button style-->
    <style name="BaseActionButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:enabled">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/text_size_button_text</item>
        <item name="android:foreground">@drawable/ripple_circle</item>
        <item name="android:paddingStart">@dimen/padding_text_button</item>
        <item name="android:paddingEnd">@dimen/padding_text_button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

    </style>


    <style name="ToolbarTextStyle">
        <item name="android:textSize">18.7sp</item>
        <item name="android:textColor">@color/pine_green</item>
        <item name="android:lineSpacingExtra">1.3sp</item>
    </style>


    <style name="ActionButtonColor" parent="BaseActionButtonStyle">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:background">@drawable/button_purple</item>

    </style>

    <style name="ActionButtonColorGray" parent="BaseActionButtonStyle">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:background">@drawable/button_gray</item>

    </style>
</resources>